<div class="form-panel">
  <div class="row">
    <h1 class="col-md-6 col-md-offset-6">Sign up</h1>
  </div>

  <%= form_for(@user) do |f| %>
    <div class="row">
      <%= f.label :name, class: 'col-md-6 form-label' %>
      <%= f.text_field :name, class: 'col-md-6' %>
    </div>
    <div class="row">
      <%= f.label :email, class: 'col-md-6 form-label' %>
      <%= f.email_field :email, class: 'col-md-6' %>
    </div>
    <div class="row">
      <%= f.label :password, class: 'col-md-6 form-label' %>
      <%= f.password_field :password, class: 'col-md-6' %>
    </div>
    <div class="row">
      <%= f.label :password_confirmation, class: 'col-md-6 form-label' %>
      <%= f.password_field :password_confirmation, class: 'col-md-6' %>
    </div>
    <div class="row">
      <%= f.submit "Create account", class: 'btn col-md-offset-6 col-md-3' %>
    </div>
  <% end %>
</div>